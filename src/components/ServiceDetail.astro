---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  service: CollectionEntry<"services">;
};

const { title, img_path, img_alt } = Astro.props.service.data;
---

<div class="service-detail">
  <div class="image-container">
    <Image src={img_path} alt={img_alt} width="480" height="620" />
  </div>
  <h4>{title}</h4>
  <p>{Astro.props.service.body}</p>
</div>

<style>
  .service-detail {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .image-container {
    width: 150px;
    height: 150px;
    overflow: hidden;
    border-radius: 50%;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: center;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  h4 {
    font-size: 1.5rem;
    margin: 0;
    text-align: center;
    text-wrap: balance;
  }

  p {
    text-align: center;
    text-wrap: balance;
    min-height: 10em;
  }

  @media (min-width: 50em) {
    .service-detail {
      gap: 2rem;
      flex: 1;
    }

    .image-container {
      width: 200px;
      height: 200px;
      /* align-self: start; */
    }

    h4 {
      font-size: 2rem;
      /* text-align: left; */
    }

    p {
      /* text-align: left; */
    }
  }
</style>
